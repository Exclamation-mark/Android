<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:id="@+id/fg_layout_user_info"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:layout_margin="5dp"--><!--android:foreground="?android:attr/selectableItemBackground"--><!--android:orientation="vertical"--><!--app:cardBackgroundColor="@color/white"--><!--app:cardElevation="5dp"--><!--app:cardPreventCornerOverlap="true"--><!--app:cardUseCompatPadding="true">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/jiankangdanganbeijing"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-10dp"
        android:background="@drawable/gradient_box"
        android:gravity="center"
        android:padding="5dp"
        android:text="我"
        android:textColor="@color/white" />

    <include layout="@layout/dash_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="康复笔记"
        android:textColor="@color/health_filestext_bg" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="150dp"

       />

    <include layout="@layout/dash_line" />

    <com.xiaocool.sugarangel.view.MyNavigationView
        android:id="@+id/details_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color="@color/health_filestext_bg"
        app:title_text="详细信息"
        app:arrow_src="@drawable/jiankangdanganjiantou"></com.xiaocool.sugarangel.view.MyNavigationView>

    <include layout="@layout/dash_line" />

    <com.xiaocool.sugarangel.view.MyNavigationView
        android:id="@+id/bind_device_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_color="@color/health_filestext_bg"
        app:title_text="绑定蓝牙设备"
        app:arrow_src="@drawable/jiankangdanganjiantou">

    </com.xiaocool.sugarangel.view.MyNavigationView>
</LinearLayout><!--</android.support.v7.widget.CardView>-->