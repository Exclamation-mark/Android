<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/driver"
    android:orientation="vertical"
    tools:context="com.xiaocool.sugarangel.fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/wodebeijing">

        <com.xiaocool.sugarangel.view.CircleImageView
            android:id="@+id/mine_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@drawable/touxiang"
            app:border_color="@color/white"
            app:border_width="2dp" />

        <TextView
            android:id="@+id/mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/mine_avatar"
            android:layout_toRightOf="@id/mine_avatar"
            android:text="糖友"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mine_use_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mine_avatar"
            android:text="使用天数20天"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

