            android:layout_height="110dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/zhong"
            android:orientation="vertical"
            android:padding="5dp">

            <com.xiaocool.sugarangel.view.MyNavigationView
                android:id="@+id/mine_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                app:icon_src="@drawable/shezhi"
                app:title_color="@android:color/black"
                app:title_text="设置" />

            <include layout="@layout/dash_line" />

            <com.xiaocool.sugarangel.view.MyNavigationView
                android:id="@+id/mine_help"
